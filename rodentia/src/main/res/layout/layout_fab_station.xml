<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/first_floor_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="80dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/second_floor_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="144dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_side_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_side_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_fab_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="80dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_fab_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="80dp"/>

    <View
        android:id="@+id/paletteMask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:elevation="@dimen/small_fab_elevation"
        app:layout_constraintStart_toStartOf="@id/fanFab"
        app:layout_constraintBottom_toBottomOf="@id/fanFab"
        android:visibility="gone"/>

    <View
        android:id="@+id/bgView"
        app:layout_constraintTop_toTopOf="@+id/primaryFab"
        app:layout_constraintBottom_toBottomOf="@+id/primaryFab"
        app:layout_constraintStart_toStartOf="@+id/primaryFab"
        app:layout_constraintEnd_toEndOf="@+id/primaryFab"
        android:elevation="@dimen/small_fab_elevation"
        android:background="@drawable/transition"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <FrameLayout
        android:id="@+id/editorFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="@dimen/small_fab_elevation"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/first_floor_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/left_fab_guideline"
        app:layout_constraintEnd_toEndOf="@+id/right_fab_guideline" >

        <ScrollView
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/editorScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="true" >

        <com.stgi.rodentia.BulletPointTextEditor
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:maxLines="3"
            android:autofillHints="false"
            android:inputType="textNoSuggestions|textMultiLine" />
    </ScrollView>

    </FrameLayout>

    <EditText
        app:layout_constraintTop_toTopOf="@id/first_floor_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/left_fab_guideline"
        app:layout_constraintEnd_toEndOf="@+id/right_fab_guideline"
        app:layout_constraintHeight_max="80dp"
        android:elevation="@dimen/small_fab_elevation"
        android:maxLength="24"
        android:id="@+id/audioEt"
        android:fontFamily="sans-serif-light"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:visibility="gone"
        android:inputType="textNoSuggestions"
        android:autofillHints="false"/>

    <ImageButton
        android:id="@+id/fanFab"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="@dimen/small_fab_elevation"
        android:padding="4dp"
        android:layout_marginEnd="@dimen/station_safety_margin"
        android:src="@drawable/paint"
        android:scaleType="fitCenter"
        android:background="@drawable/circle"
        android:foreground="@drawable/circular_ripple"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/primaryFab"/>

    <View
        android:id="@+id/mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/mask"
        android:elevation="@dimen/small_fab_elevation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <com.stgi.rodentia.ClockButton
        android:id="@+id/clockFab"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="@dimen/small_fab_elevation"
        app:layout_constraintEnd_toEndOf="@+id/primaryFab"
        app:layout_constraintBottom_toBottomOf="@+id/primaryFab"
        />

    <ImageButton
        android:id="@+id/tertiaryFab"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="@dimen/small_fab_elevation"
        android:background="@drawable/circle"
        android:foreground="@drawable/circular_ripple"
        app:layout_constraintBottom_toBottomOf="@+id/primaryFab"
        app:layout_constraintEnd_toEndOf="@+id/primaryFab" />

    <ImageButton
        android:id="@+id/secondaryFab"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:elevation="@dimen/small_fab_elevation"
        android:background="@drawable/circle"
        android:foreground="@drawable/circular_ripple"
        app:layout_constraintWidth_percent="0"
        app:layout_constraintHeight_percent="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/left_fab_guideline"
        app:layout_constraintTop_toTopOf="@id/first_floor_guideline"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/primaryFab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        android:elevation="@dimen/small_fab_elevation"
        android:background="@drawable/circle"
        android:foreground="@drawable/circular_ripple"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@null" />

    <com.stgi.rodentia.RecordingSwipeButton
        android:id="@+id/swipeFab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:defaultSrc="@drawable/mic"
        android:elevation="@dimen/small_fab_elevation"
        app:thresholdSignal="vibration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/small_fab_elevation"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.5"
        android:visibility="gone"/>

    <include
        layout="@layout/date_picker_mask"
        android:layout_width="@dimen/date_picker_mask_size"
        android:layout_height="@dimen/date_picker_mask_size"
        android:elevation="@dimen/small_fab_elevation"
        android:layout_marginEnd="@dimen/station_safety_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        />

<!--/androidx.constraintlayout.widget.ConstraintLayout-->

</merge>